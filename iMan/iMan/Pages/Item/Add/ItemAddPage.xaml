<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="iMan.Pages.Views.ItemAddPage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True" x:Name="itemAdd" Title="Add Item">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout  Orientation="Horizontal">
                <Button Text="Cancel" Command="{Binding CancelCommand}"  HorizontalOptions="StartAndExpand"/>
                <Label Text="Add Item" HorizontalOptions="CenterAndExpand" VerticalTextAlignment="Center"/>
                <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
            <StackLayout BindingContext="{Binding Item}" Margin="10,10,0,0">
                <Label Text="Name"/>
                <Entry x:Name="itemName" Text="{Binding Name}" />
                <Label Text="Rate"/>
                <Entry Text="{Binding Rate}" Keyboard="Numeric"/>
                <Label Text="Unit"/>
                <Picker ItemsSource="{Binding BindingContext.UnitList,Source={x:Reference Name=itemAdd}}" SelectedItem="{Binding Unit}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
